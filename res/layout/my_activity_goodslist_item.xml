<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/my_activity_goodslist_item_image"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/my_activity_goodslist_item_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_activity_goodslist_item_goodsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fghjkl"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/my_activity_goodslist_item_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_activity_goodslist_item_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="123456" />

            <TextView
                android:id="@+id/my_activity_goodslist_item_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="123456"
                android:textColor="#f00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>